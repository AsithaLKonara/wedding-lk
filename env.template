# WeddingLK Environment Configuration Template
# Copy this file to .env.local and fill in your actual values

# ===========================================
# MONGODB ATLAS CONFIGURATION
# ===========================================
# Get this from MongoDB Atlas -> Clusters -> Connect -> Connect your application
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/weddinglk

# ===========================================
# REDIS CACHE (Optional but recommended)
# ===========================================
# Get this from Redis Cloud or your Redis provider
REDIS_URL=rediss://username:password@host:port

# ===========================================
# NEXTAUTH CONFIGURATION
# ===========================================
# Your application URL (change for production)
NEXTAUTH_URL=http://localhost:3000

# Generate a random secret key
NEXTAUTH_SECRET=your-random-secret-key-here


# ===========================================
# CLOUDINARY (For image uploads)
# ===========================================
# Get this from Cloudinary dashboard
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# ===========================================
# STRIPE (For payments)
# ===========================================
# Get these from Stripe dashboard
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ===========================================
# OPENAI (For AI features)
# ===========================================
# Get this from OpenAI platform
OPENAI_API_KEY=sk-your-openai-api-key

# ===========================================
# EMAIL SERVICE (Optional)
# ===========================================
# For sending emails (Gmail example)
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@gmail.com
EMAIL_SERVER_PASSWORD=your-app-password
EMAIL_FROM=noreply@weddinglk.com

# ===========================================
# APPLICATION SETTINGS
# ===========================================
# Environment (development, production)
NODE_ENV=development

# Application name
APP_NAME=WeddingLK

# Application version
APP_VERSION=1.0.0

# ===========================================
# SECURITY SETTINGS
# ===========================================
# JWT secret (should be different from NEXTAUTH_SECRET)
JWT_SECRET=your-jwt-secret-key

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Enable debug mode
DEBUG=true

# Enable query logging
MONGOOSE_DEBUG=true

# ===========================================
# PRODUCTION SETTINGS
# ===========================================
# Production URL (set this in production)
PRODUCTION_URL=https://your-domain.com

# SSL settings
FORCE_HTTPS=true

# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable/disable features
FEATURE_AI_SEARCH=true
FEATURE_SOCIAL_MEDIA=true
FEATURE_PAYMENTS=true
FEATURE_ANALYTICS=true
FEATURE_NOTIFICATIONS=true
FEATURE_CHAT=true

# ===========================================
# CUSTOMIZATION SETTINGS
# ===========================================
# Brand customization
BRAND_NAME=WeddingLK
BRAND_PRIMARY_COLOR=#8B5CF6
BRAND_SECONDARY_COLOR=#06B6D4

# Default settings
DEFAULT_CURRENCY=LKR
DEFAULT_LANGUAGE=en
DEFAULT_TIMEZONE=Asia/Colombo

# ===========================================
# END OF CONFIGURATION
# ===========================================
# Remember to:
# 1. Copy this file to .env.local
# 2. Fill in all the required values
# 3. Never commit .env.local to version control
# 4. Use different values for production
# 5. Keep your secrets secure
