# ========================================
# WEDDINGLK ENVIRONMENT CONFIGURATION
# ========================================

# Application
NODE_ENV=development
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here
JWT_SECRET=your-jwt-secret-key

# OAuth Providers (REQUIRED for social login)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret

# AI Services (REQUIRED for AI features)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Database - MongoDB Atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/weddinglk?retryWrites=true&w=majority

# Redis - Caching
REDIS_URL=redis://localhost:6379

# Stripe (Payment Processing)
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# PayHere (Sri Lankan Payment Gateway)
PAYHERE_MERCHANT_ID=your-payhere-merchant-id
PAYHERE_SECRET_KEY=your-payhere-secret-key
PAYHERE_SANDBOX_MODE=true

# Cloudinary (Image Storage)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
CLOUDINARY_URL=cloudinary://your-api-key:your-api-secret@your-cloud-name

# Email Service (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=WeddingLK <noreply@weddinglk.com>

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Performance
REDIS_CACHE_TTL=3600
MONGODB_POOL_SIZE=5
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000
MONGODB_SOCKET_TIMEOUT_MS=45000

# Monitoring
ENABLE_HEALTH_CHECKS=true
ENABLE_PERFORMANCE_MONITORING=true
LOG_LEVEL=debug

# Push Notifications (VAPID Keys)
NEXT_PUBLIC_VAPID_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# Public App URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Optional: Additional OAuth Providers
# INSTAGRAM_CLIENT_ID=your-instagram-client-id
# INSTAGRAM_CLIENT_SECRET=your-instagram-client-secret
# LINKEDIN_CLIENT_ID=your-linkedin-client-id
# LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Optional: SMS Service (Twilio)
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token
# TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Optional: Analytics
# GOOGLE_ANALYTICS_ID=your-ga-id
# MIXPANEL_TOKEN=your-mixpanel-token

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_PAYMENTS=true
ENABLE_SMS=false
ENABLE_EMAIL=true 